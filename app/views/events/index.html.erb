<p id="notice"><%= notice %></p>

<h1>Events</h1><br>

<section class="">
<div class="wrap-table100">
<div class="table100">
<table>
  <thead>
    <tr class="table100-head">
      <th class="column1">Description</th>
      <th class="column2">Event date</th>
      <th class="column3">Event type</th>
      <th class="column4">Event status</th>
      <th class="column5">Sponsor</th>
      <th class="column6">Fee</th>
      <th class="column7">Address</th>
      <th class="column8">Building name</th>
      <th class="column9">City</th>
      <th class="column10">Zip</th>
      <th class="column11">State</th>
      <th class="column12">Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="column1"><%= event.description %></td>
        <td class="column2"><%= event.event_date.strftime("%I:%M %p") %></td>
        <td class="column3"><%= event.event_type_id %></td>
        <td class="column4"><%= event.event_status_id %></td>
        <td class="column5"><%= event.sponsor_id %></td>
        <td class="column6"><%= event.fee %></td>
        <td class="column7"><%= event.address %></td>
        <td class="column8"><%= event.building_name %></td>
        <td class="column9"><%= event.city %></td>
        <td class="column10"><%= event.zip %></td>
        <td class="column11"><%= event.state_id %></td>
        <td class="column12"><%= event.country_id %></td>
        <td class="column13"><%= link_to 'Show', event %></td>
        <td class="column14"><%= link_to 'Edit', edit_event_path(event) %></td>
        <td class="column15"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Event', new_event_path, class: "add" %>
</div>
</div>
</section>
