<p id="notice"><%= notice %></p>

<h1>Officer Positions</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officer_positions.each do |officer_position| %>
      <tr>
        <td><%= officer_position.position %></td>
        <td><%= officer_position.description %></td>
        <td><%= link_to 'View Position', officer_position, class: "show" %></td>
        <td><%= link_to 'Edit', edit_officer_position_path(officer_position) %></td>
        <td><%= link_to 'Destroy', officer_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

