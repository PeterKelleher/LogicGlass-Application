<p id="notice"><%= notice %></p>

<h1>Officer Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officer_statuses.each do |officer_status| %>
      <tr>
        <td><%= officer_status.status %></td>
        <td><%= officer_status.description %></td>
        <td><%= link_to 'View Status', officer_status, class: "show" %></td>
        <td><%= link_to 'Edit', edit_officer_status_path(officer_status) %></td>
        <td><%= link_to 'Destroy', officer_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

