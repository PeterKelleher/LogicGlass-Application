<p id="notice"><%= notice %></p>

<h1>Event Types</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.event_type %></td>
        <td><%= event_type.description %></td>
        <td><%= link_to 'View Type', event_type, class: "show" %></td>
        <td><%= link_to 'Edit', edit_event_type_path(event_type) %></td>
        <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

