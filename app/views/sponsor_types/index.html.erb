<p id="notice"><%= notice %></p>

<h1>Sponsor Types</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsor_types.each do |sponsor_type| %>
      <tr>
        <td><%= sponsor_type.sponsor_type %></td>
        <td><%= sponsor_type.description %></td>
        <td><%= link_to 'View Type', sponsor_type, class: "show" %></td>
        <td><%= link_to 'Edit', edit_sponsor_type_path(sponsor_type) %></td>
        <td><%= link_to 'Destroy', sponsor_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

