<p id="notice"><%= notice %></p>

<h1>Officers</h1><br>

<section class="">
<div class="wrap-table100">
<div class="table100">
<table>
  <thead>
    <tr class="table100-head">
      <th class="column1">Peoplesoft</th>
      <th class="column2">Full Name</th>
      <th class="column3">Position</th>
      <th class="column4">Student class</th>
      <th class="column5">Major</th>
      <th class="column6">Paid</th>
      <th class="column7">Officer Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td class="column1"><%= officer.peoplesoft_id %></td>
        <td class="column2"><%= officer.first_name + ' ' + officer.middle_initial + '. ' + officer.last_name %></td>
        <td class="column3"><%= officer.officer_position.position %></td>
        <td class="column4"><%= officer.student_class.student_class %></td>
        <td class="column5"><%= officer.major %></td>
        <td class="column6"><%= officer.payment %></td>
        <td class="column7"><%= officer.officer_status.status %></td>
        <td class="column8"><%= link_to 'View Contact', officer, class: "show" %></td>
        <td class="column9"><%= link_to 'Edit', edit_officer_path(officer) %></td>
        <td class="column10"><%= link_to 'Destroy', officer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Officer', new_officer_path, class: "add" %>
</div>
</div>
</section>
