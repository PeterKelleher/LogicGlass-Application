<p id="notice"><%= notice %></p>

<h1>Officer Check Ins</h1><br>

<section class="">
<div class="wrap-table100">
<div class="table100">
<table>
  <thead>
    <tr class="table100-head">
      <th class="column1">Officer</th>
      <th class="column2">Event</th>
      <th class="column3">Check in time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officer_check_ins.each do |officer_check_in| %>
      <tr>
        <td class="column1"><%= officer_check_in.officer.full_name %></td>
        <td class="column2"><%= officer_check_in.event.description %></td>
        <td class="column3"><%= officer_check_in.check_in_date.strftime("%I:%M %p") %></td>
        <td class="column4"><%= link_to 'View', officer_check_in, class: "show" %></td>
        <td class="column5"><%= link_to 'Edit', edit_officer_check_in_path(officer_check_in) %></td>
        <td class="column6"><%= link_to 'Destroy', officer_check_in, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Officer Check In', new_officer_check_in_path, class: "add" %>
</div>
</div>
</section>
