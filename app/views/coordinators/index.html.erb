<p id="notice"><%= notice %></p>

<h1>Coordinators</h1><br>

<section class="">
<div class="wrap-table100">
<div class="table100">
<table>
  <thead>
    <tr class="table100-head">
      <th class="column1">Peoplesoft</th>
      <th class="column2">Full name</th>
      <th class="column3">Position</th>
      <th class="column4">Student class</th>
      <th class="column5">Major</th>
      <th class="column6">Paid</th>
      <th class="column7">Coordinator status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coordinators.each do |coordinator| %>
      <tr>
        <td class="column1"><%= coordinator.peoplesoft_id %></td>
        <td class="column2"><%= coordinator.first_name + ' ' +  coordinator.middle_initial + '. ' + coordinator.last_name %></td>
        <td class="column3"><%= coordinator.coordinator_position.position %></td>
        <td class="column4"><%= coordinator.student_class.student_class %></td>
        <td class="column5"><%= coordinator.major %></td>
        <td class="column6"><%= coordinator.payment %></td>
        <td class="column7"><%= coordinator.coordinator_status.status %></td>
        <td class="column8"><%= link_to 'View Contact', coordinator, class: "show" %></td>
        <td class="column9"><%= link_to 'Edit Contact', edit_coordinator_path(coordinator), class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Coordinator', new_coordinator_path, class: "add" %>
</div>
</div>
</section>
