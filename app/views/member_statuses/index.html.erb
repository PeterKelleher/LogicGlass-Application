<p id="notice"><%= notice %></p>

<h1>Member Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_statuses.each do |member_status| %>
      <tr>
        <td><%= member_status.status %></td>
        <td><%= member_status.description %></td>
        <td><%= link_to 'View', member_status, class: "show" %></td>
        <td><%= link_to 'Edit', edit_member_status_path(member_status) %></td>
        <td><%= link_to 'Destroy', member_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

