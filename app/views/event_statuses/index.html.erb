<div class="background">
<p id="notice"><%= notice %></p>

<h1>Event Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_statuses.each do |event_status| %>
      <tr>
        <td><%= event_status.status %></td>
        <td><%= event_status.description %></td>
        <td><%= link_to 'View Status', event_status, class: "show" %></td>
        <td><%= link_to 'Edit Status', edit_event_status_path(event_status), class: "show" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Status', new_event_status_path %>
</div>
